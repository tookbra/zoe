.post-toc-content h1::before,
.post-toc-content h2::before,
.post-toc-content h3::before,
.post-toc-content h4::before,
.post-toc-content h5::before,
.post-toc-content h6::before {
  display: block;
  content: " ";
  height: 100px;
  margin-top: -100px;
  visibility: hidden;
}
.post-toc-content :focus {
  outline: none;
}

.toc-fixed {
  position: fixed;
  top: 64px;
}

.post-toc-widget {
  padding-left: 20px;

  &.affix {
    position: fixed;
    top: 12px;
  }

  .post-toc-title {
    margin: 35px 0 15px 0;
    padding-left: 17px;
    font-size: 1.5rem;
    font-weight: bold;
    line-height: 1.5rem;

    ol {
      padding: 0;
      list-style: none;
    }
  }
}
.post-toc-content {
  ol, li {
    padding-left: 10px;
  }
}

.toc-link:hover {
  color: #42b983;
  font-weight: 700;
  text-decoration: underline;
}

.toc-link::before {
  background-color: transparent;
  max-height: 25px;
}

.is-active-link {
  color: #42b983;
}

.is-active-link::before {
  background-color: #42b983;
}

.post pre, .post .highlight {
  background: #f7f7f7;
  margin: 20px 0;
  padding: 15px;
  overflow: auto;
  font-size: 13px;
  color: #4d4d4c;
  line-height: 1.2;
}

.post .highlight table {
  margin: 0;
  width: auto;
}

.post-toc-wrap {
  overflow-x: hidden;
  overflow-y: auto;
}

.post-toc-content {
  font-size: $font-size-small;

  ol {
    list-style: none;
    margin: 0;
    padding: 0 2px 5px 10px;
    text-align: left;

    > ol {
      padding-left: 0;
    }

    a {
      border-bottom-color: $toc-link-border-color;
      color: $toc-link-color;
      transition-property: all;
      the-transition();

      &:hover {
        border-bottom-color: $toc-link-hover-border-color;
        color: $toc-link-hover-color;
      }
    }
  }

  .nav-item {
    line-height: 1.8;
    overflow: hidden;
    text-overflow: ellipsis;
    // text-align: justify;

    if (!hexo-config('toc.wrap')) {
      white-space: nowrap;
    }
  }

  .nav {
    .nav-child {
      display: hexo-config('toc.expand_all') ? block : none;
    }

    .active > .nav-child {
      display: block;
    }

    .active-current > .nav-child {
      display: block;

      > .nav-item {
        display: block;
      }
    }

    .active > a {
      border-bottom-color: $toc-link-active-border-color;
      color: $toc-link-active-color;
    }

    .active-current > a {
      color: $toc-link-active-current-color;

      &:hover {
        color: $toc-link-active-current-border-color;
      }
    }
  }
}
