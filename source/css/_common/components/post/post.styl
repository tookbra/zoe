.post-toc-content h1::before,
.post-toc-content h2::before,
.post-toc-content h3::before,
.post-toc-content h4::before,
.post-toc-content h5::before,
.post-toc-content h6::before {
  display: block;
  content: " ";
  height: 100px;
  margin-top: -100px;
  visibility: hidden;
}
.post-toc-content :focus {
  outline: none;
}

.toc-fixed {
  position: fixed;
  top: 64px;
}

.post-toc-widget {
  padding-left: 20px;

  &.affix {
    position: fixed;
    top: 12px;
  }

  .post-toc-title {
    margin: 35px 0 15px 0;
    padding-left: 17px;
    font-size: 1.5rem;
    font-weight: bold;
    line-height: 1.5rem;

    ol {
      padding: 0;
      list-style: none;
    }
  }
}
.post-toc-content {
  ol, li {
    padding-left: 10px;
  }
}

.toc-link:hover {
  color: #42b983;
  font-weight: 700;
  text-decoration: underline;
}

.toc-link::before {
  background-color: transparent;
  max-height: 25px;
}

.is-active-link {
  color: #42b983;
}

.is-active-link::before {
  background-color: #42b983;
}

.post .highlight table {
  margin: 0;
  width: auto;
}

.post-toc-wrap {
  overflow-x: hidden;
  overflow-y: auto;
}

.post-toc-content {
  font-size: $font-size-small;

  ol {
    list-style: none;
    margin: 0;
    padding: 0 2px 5px 10px;
    text-align: left;

    > ol {
      padding-left: 0;
    }

    a {
      border-bottom-color: $toc-link-border-color;
      color: $toc-link-color;
      transition-property: all;
      the-transition();

      &:hover {
        border-bottom-color: $toc-link-hover-border-color;
        color: $toc-link-hover-color;
      }
    }
  }

  .nav-item {
    line-height: 1.8;
    overflow: hidden;
    text-overflow: ellipsis;
    // text-align: justify;

    if (!hexo-config('toc.wrap')) {
      white-space: nowrap;
    }
  }

  .nav {
    .nav-child {
      display: hexo-config('toc.expand_all') ? block : none;
    }

    .active > .nav-child {
      display: block;
    }

    .active-current > .nav-child {
      display: block;

      > .nav-item {
        display: block;
      }
    }

    .active > a {
      border-bottom-color: $toc-link-active-border-color;
      color: $toc-link-active-color;
    }

    .active-current > a {
      color: $toc-link-active-current-color;

      &:hover {
        color: $toc-link-active-current-border-color;
      }
    }
  }
}

.prev-next {
  .left-badge {
    border-radius: 0 5px 5px 0;
  }

  .right-badge {
    border-radius: 5px 0 0 5px;
    right: 10px;
  }

  .article-badge {
    min-width: 3rem;
    margin-top: 7px;
    padding: 3px 10px 3px 8px;
    text-align: center;
    font-size: 1rem;
    line-height: inherit;
    position: absolute;
    box-sizing: border-box;
    z-index: 200;
    background-color: #fff;
    font-weight: 500;
  }
}

.text-color {
  color: #0f9d58 !important;
}

.post-container {
  padding-top: 100px;
}

.post-toc-content .active-current .nav-link::before {
  background-color: $blue;
}
.post-toc-content .nav-link::before {
  background-color: transparent;
  height: 25px;
  line-height: 25px;
  margin-top: 5px;
}

.nav-link::before {
  background-color: #EEE;
  content: ' ';
  display: inline-block;
  height: inherit;
  left: 0;
  margin-top: -1px;
  position: absolute;
  width: 2px;
}
